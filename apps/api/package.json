{
  "name": "@fullstack-boilerplate/api",
  "type": "module",
  "exports": {
    "./client": {
      "import": {
        "type": "./dist/src/client.d.ts",
        "default": "./dist/src/client.js"
      }
    }
  },
  "scripts": {
    "dev": "pnpm --filter @fullstack-boilerplate/api --parallel \"/^dev:.*/\"",
    "dev:watch": "tsx watch --env-file=.env src/index.ts",
    "dev:build": "tsc -p tsconfig.build.json --watch",
    "build": "tsc -p tsconfig.build.json",
    "start": "node --env-file=.env dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --project e2e",
    "test:unit": "vitest run --project unit",
    "migration:create": "drizzle-kit generate",
    "migration:migrate": "drizzle-kit migrate",
    "create-admin": "tsx scripts/create-admin.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "@hono/zod-validator": "^0.7.6",
    "@libsql/client": "^0.17.0",
    "@types/pg": "^8.16.0",
    "better-auth": "^1.4.10",
    "better-sqlite3": "^12.6.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "hono-rate-limiter": "^0.5.3",
    "pg": "^8.17.1",
    "vitest": "^4.0.17",
    "zod": "^4.3.5",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@faker-js/faker": "^10.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.5",
    "drizzle-kit": "^0.31.8",
    "globals": "^17.0.0",
    "prettier": "3.7.4",
    "typescript": "^5.9.3"
  }
}
